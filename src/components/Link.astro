---
interface Props {
    title: string;
    body: string;
    href: string;
}

const { href, title, body } = Astro.props;
---

<li class="link-card bg-slate-200 hover:bg-slate-300 rounded-lg p-5">
    <a href={href} class="text-black" target="_blank">
        <h2 class="text-2xl font-semibold">
            {title}
        </h2>
        <p>
            {body}
        </p>
    </a>
</li>
<style>
    .link-card {
        background-size: 400%;
    }
    h2 {
        margin: 0;
        font-size: 1.25rem;
        transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    }
    .link-card:is(:hover) {
        background-position: 0;
        background-image: var(--accent-gradient);
    }
</style>
